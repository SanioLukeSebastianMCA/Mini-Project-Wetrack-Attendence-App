<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SelectUserActivity">

    <LinearLayout
        android:id="@+id/selectuser_mainlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingHorizontal="30dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/we_track_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Welcome to WeTrack"
            android:textAlignment="center"
            android:textColor="@color/v_maincolor"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:text="We welcome you to our app. We are happy to have you as our users and we assure you with all the safety and ease of work."
            android:textAlignment="center"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="Picks one that suits you the best"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp" />



        <RadioGroup
            android:id="@+id/select_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/owner_radio_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_checkbox"
                android:button="@android:color/transparent"
                android:checked="false"
                android:fontFamily="@font/poppins_light"
                android:padding="20dp"
                android:text="I own a business"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/employee_radio_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_checkbox"
                android:button="@android:color/transparent"
                android:checked="false"
                android:fontFamily="@font/poppins_light"
                android:padding="20dp"
                android:text="I'm an employee"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/manager_radio_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_checkbox"
                android:button="@android:color/transparent"
                android:checked="false"
                android:fontFamily="@font/poppins_light"
                android:padding="20dp"
                android:text="I'm a manager"
                android:textAlignment="center" />

        </RadioGroup>

        <Button
            android:id="@+id/selectuser_submitbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#DADADA"
            android:enabled="false"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:elevation="3dp"
            android:background="@drawable/curve_border"
            android:text="Continue" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>